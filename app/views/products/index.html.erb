<h1>Products</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.category_id %></td>
        <td><%= product.user_id %></td>
        <td><%= link_to 'Show', product, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Product', new_product_path, :class => "btn btn-success"  %>


<br><br><br>

  <%= render "products/products" %>

